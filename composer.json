{
    "name": "fintech/core",
    "description": "This is a core module package for fintech package program",
    "keywords": [
        "fintech",
        "laravel",
        "core"
    ],
    "homepage": "https://github.com/fintech/core",
    "license": "MIT",
    "authors": [
        {
            "name": "Mohammad Hafijul Islam",
            "email": "hafijul233@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-dom": "*",
        "ext-imagick": "*",
        "alexusmai/laravel-file-manager": "^3.1",
        "illuminate/contracts": "^9.0|^10.0",
        "spatie/laravel-medialibrary": "^10.13"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.9",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Fintech\\Core\\": "src/"
        },
        "files": [
            "src/helpers.php",
            "src/constants.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Fintech\\Core\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest --ci",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Fintech\\Core\\CoreServiceProvider",
                "Fintech\\Core\\EventServiceProvider"
            ],
            "aliases": {
                "Core": "Fintech\\Core\\Facades\\Core"
            }
        }
    },
    "suggest": {
        "mongodb/laravel-mongodb": "A laravel integration packge for mongodb",
        "ext-mongodb": "Needed to support MongoDB database handle",
        "ext-intl": "Need to suppport Localization on currency"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
